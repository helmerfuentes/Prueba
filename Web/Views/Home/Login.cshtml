
@{
    ViewData["Title"] = "Login";
    Layout = "_layoutDinamico";

}


<h2>Login</h2>
<div class="row">
    <div class="danger">
        @ViewBag.Error
    </div>
    <form action="/Acceso/Login" method="post">
        <div class="form-group">
            <label for="exampleInputEmail1">Nombre de usuario</label>
            <input name="user" type="text" class="form-control" id="nombreDeUsuario" aria-describedby="emailHelp" placeholder="Ingrese su nombre de usuario">
            <small id="emailHelp" class="form-text text-muted">Nombre de usuario que usaste al momento de registrarte</small>
        </div>
        <div class="form-group">
            <label for="clave">Contraseña</label>
            <input name="pass" type="password" class="form-control" id="clave" placeholder="Contraseña">
        </div>
        <div class="form-group">
            <input type="submit" value="Entrar" class="btn btn-success" />
        </div>
    </form>
</div>


